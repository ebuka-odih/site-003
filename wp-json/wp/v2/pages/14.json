lose it\r\n                    $clickedTrigger.removeClass('active');\r\n                    $parentCol.find('.column_content').removeClass('open');\r\n                } else {\r\n                    \/\/ If not active, close any open one first\r\n                    $('.column_trigger').removeClass('active');\r\n                    $('.column_content').removeClass('open');\r\n                    \r\n                    \/\/ Then open the clicked one\r\n                    $clickedTrigger.addClass('active');\r\n                    $parentCol.find('.column_content').addClass('open');\r\n                }\r\n            } else {\r\n                \/\/ On desktop: toggle both columns together (original behavior)\r\n                $('.column_trigger').toggleClass('active');\r\n                $('.column_content').toggleClass('open');\r\n            }\r\n        });\r\n        \r\n        \/\/ Update behavior when window resizes\r\n        $(window).on('resize', function() {\r\n            if (window.innerWidth >= 1275) {\r\n                \/\/ Ensure both columns have the same state on desktop\r\n                const anyActive = $('.column_trigger.active').length > 0;\r\n                if (anyActive) {\r\n                    $('.column_trigger').addClass('active');\r\n                    $('.column_content').addClass('open');\r\n                } else {\r\n                    $('.column_trigger').removeClass('active');\r\n                    $('.column_content').removeClass('open');\r\n                }\r\n            }\r\n        });\r\n    });\r\n});\r\n<\/script>","protected":false},"excerpt":{"rendered":"","protected":false},"author":1,"featured_media":1101,"parent":0,"menu_order":0,"comment_status":"closed","ping_status":"closed","template":"","meta":{"_acf_changed":false,"footnotes":""},"class_list":["post-14","page","type-page","status-publish","has-post-thumbnail","hentry"],"acf":[],"yoast_head":"<!-- This site is optimized with the Yoast SEO plugin v26.0 -